<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
     android:layout_width="fill_parent" 
     android:background="@color/app_color"
     android:id="@+id/layout_page1">
     <ImageView android:id="@+id/ImageView01_page1" android:layout_alignParentTop="true" android:layout_alignParentBottom="false" android:layout_height="140dip" android:background="@drawable/theme1_background_bande_haut" android:layout_width="fill_parent"/> 
     <ScrollView android:layout_marginBottom="1dip" android:id="@+id/ScrollView01_page1" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <RelativeLayout android:layout_marginTop="-1dip" android:gravity="bottom" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@color/app_color">
			<ImageView android:id="@+id/ImageView03_page1" android:layout_height="1200dip" android:layout_alignParentLeft="true" android:layout_width="31dip" android:gravity="top" android:background="@drawable/theme1_background_bande_gauche"/>
			<ImageView android:id="@+id/ImageView04_page1" android:layout_height="1200dip" android:layout_alignParentRight="true" android:layout_width="31dip" android:gravity="top" android:background="@drawable/theme1_background_bande_droite"/>
     
	        
	        <ImageView android:id="@+id/ImageViewVisage_page1" android:layout_height="40dip" android:layout_width="wrap_content" android:layout_marginTop="25dip" android:layout_marginLeft="45dip" android:layout_alignParentRight="true" android:layout_below="@+id/ImageView01_page1" android:background="@drawable/theme1_button_categorie_visage"/>
			
			<ImageView android:id="@+id/ImageViewYeux_page1" android:layout_height="40dip" android:layout_width="wrap_content" android:layout_marginLeft="45dip" android:layout_alignParentRight="true"  android:layout_below="@+id/ImageViewVisage_page1" android:background="@drawable/theme1_button_categorie_yeux" android:layout_marginTop="10dip"/>
			
			<ImageView android:id="@+id/ImageViewLevres_page1" android:layout_below="@+id/ImageViewYeux_page1" android:layout_height="40dip" android:layout_width="wrap_content" android:layout_marginLeft="45dip" android:layout_alignParentRight="true"  android:background="@drawable/theme1_button_categorie_levres" android:layout_marginTop="10dip"/>
		
			<ImageView android:id="@+id/ImageViewAutres_page1" android:layout_below="@+id/ImageViewLevres_page1" android:layout_height="40dip" android:layout_width="wrap_content" android:layout_marginLeft="45dip" android:layout_alignParentRight="true"  android:background="@drawable/theme1_button_categorie_autres" android:layout_marginTop="10dip"/>
			
			
        </RelativeLayout>  
     </ScrollView>
     	
</LinearLayout>



 
 
