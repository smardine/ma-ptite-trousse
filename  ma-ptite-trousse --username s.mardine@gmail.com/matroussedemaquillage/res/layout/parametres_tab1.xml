<TextView android:layout_below="@id/CbAfficheAlerte" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@color/app_color" android:id="@+id/Param_NbJourPeremp" android:textColor="@color/text_color" android:text="Nb de jours avant de considerer un produit comme perime"></TextView>
<EditText android:layout_below="@id/Param_NbJourPeremp" android:layout_height="wrap_content" android:inputType="number" android:lines="1" android:textColor="@color/text_color" android:visibility="visible" android:id="@+id/Param_DureeVie" android:layout_width="fill_parent"></EditText>



</LinearLayout>

