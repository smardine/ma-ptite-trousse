<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/app_color" 
  android:layout_width="fill_parent" 
  android:orientation="horizontal" 
  android:layout_marginBottom="5dip" 
  android:layout_marginTop="5dip" 
  android:layout_height="wrap_content">
	
	<TextView android:text="@+id/Txt1List"
		android:textSize="16sp" 
		android:textStyle="bold"
		android:layout_height="wrap_content" 
		android:textColor="@color/text_color" 
		android:id="@+id/Txt1List" 
		android:layout_width="0dp" 
		android:layout_gravity="center_vertical" 
		android:visibility="invisible" 
		android:layout_weight="0.01"></TextView>
	<TextView android:text="@+id/Txt2List" 
		android:textSize="16sp" 
		android:layout_height="wrap_content" 
		android:textColor="@color/text_color" 
		android:id="@+id/Txt2List" 
		android:layout_width="0dp" 
		android:layout_gravity="center_vertical" 
		android:layout_weight="2.5"></TextView>
	<TextView android:text="@+id/Txt3List" 
		android:textSize="16sp" 
		android:layout_height="wrap_content" 
		android:textColor="@color/text_color" 
		android:id="@+id/Txt3List" 
		android:layout_width="0dp" 
		android:layout_gravity="center_vertical" 
		android:layout_weight="2"></TextView>
		<TextView android:text="@+id/Txt3List" 
		android:textSize="16sp" 
		android:layout_height="wrap_content" 
		android:textColor="@color/text_color" 
		android:layout_width="0dp" 
		android:layout_gravity="center_vertical" 
		android:layout_weight="2" android:id="@+id/Txt4List"></TextView>
	


</LinearLayout>
