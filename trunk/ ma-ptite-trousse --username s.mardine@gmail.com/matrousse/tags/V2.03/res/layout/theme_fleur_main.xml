<ImageView android:layout_width="0dp" android:visibility="visible" android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:id="@+id/IvBouton2" android:src="@drawable/theme_fleur_button_accueil_2" android:layout_below="@+id/IvHaut" android:layout_toRightOf="@+id/IvBouton1"></ImageView>
<ImageView android:layout_width="0dp" android:visibility="visible" android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:layout_height="wrap_content" android:id="@+id/IvBouton3" android:src="@drawable/theme_fleur_button_accueil_3" android:layout_centerHorizontal="true" android:layout_below="@+id/IvHaut" android:layout_toRightOf="@+id/IvBouton3"></ImageView>
  </LinearLayout>

 
