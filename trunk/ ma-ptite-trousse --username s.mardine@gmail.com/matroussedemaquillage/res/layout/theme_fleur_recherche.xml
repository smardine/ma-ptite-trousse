<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@color/app_color">
       	
     <ImageView android:id="@+id/ImageView03_rech" android:layout_alignParentLeft="true" android:background="@drawable/theme_fleur_background_bande_gauche" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
	 <ImageView android:id="@+id/ImageView04_rech" android:layout_alignParentRight="true" android:background="@drawable/theme_fleur_background_bande_droite" android:layout_width="wrap_content" android:layout_height="wrap_content"/><ImageView android:id="@+id/ImageView01_rech" android:layout_alignParentTop="true" android:layout_alignParentBottom="false" android:layout_height="140dip" android:visibility="visible" android:background="@drawable/theme_fleur_background_bande_haut" android:layout_width="fill_parent" />
	         	
			<ToggleButton android:id="@+id/BTcat" android:layout_below="@+id/ImageView01_rech" android:layout_width="wrap_content" android:layout_height="wrap_content" android:clickable="true" android:checked="false" android:textOn="Catégorie" android:visibility="visible" android:layout_toLeftOf="@+id/BTmarque" android:layout_marginRight="15dip" android:textOff="Catégorie"></ToggleButton>
     		<ToggleButton android:text="Marque" android:id="@+id/BTmarque"  android:layout_below="@+id/ImageView01_rech" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textOn="Marque" android:textOff="Marque" android:visibility="visible" android:checked="false" android:clickable="true" android:layout_centerHorizontal="true"></ToggleButton>
     		<ToggleButton android:text="Tout" android:id="@+id/BTtout" android:layout_below="@+id/ImageView01_rech" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textOff="Tout" android:textOn="Tout" android:visibility="visible" android:checked="true" android:clickable="true" android:layout_toRightOf="@+id/BTmarque" android:layout_marginLeft="15dip"></ToggleButton>
     	
			<ListView android:layout_width="fill_parent" 
			android:layout_height="wrap_content"  
			android:id="@+id/produitListViewRechercheTitre" 
			android:layout_marginLeft="40dip" 
			android:layout_below="@+id/BTcat" android:scrollbars="none" android:scrollbarAlwaysDrawVerticalTrack="false" android:scrollbarAlwaysDrawHorizontalTrack="false" android:visibility="visible" android:choiceMode="none" android:clickable="false" android:layout_marginTop="15dip" android:layout_marginRight="41dip"> </ListView>
			<ListView android:layout_width="fill_parent" 
			android:layout_height="wrap_content"  
