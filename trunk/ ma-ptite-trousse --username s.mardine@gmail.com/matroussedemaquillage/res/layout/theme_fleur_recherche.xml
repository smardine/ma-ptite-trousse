			android:background="@color/app_color" 
			android:layout_marginLeft="40dip" 
			android:layout_below="@+id/produitListViewRechercheTitre" android:divider="@drawable/separateur" android:dividerHeight="1dip" android:layout_marginTop="15dip" android:layout_marginRight="41dip"> </ListView>
				
     




